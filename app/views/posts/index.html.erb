<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "posts/index", "data-turbo-track": "reload" %>
<% end %>

<p style="color: green"><%= notice %></p>

<h1>Posts</h1>

<div class="posts__index__list" id="posts">
  <% @posts.each do |post| %>
    <%= render post %>
  <% end %>
</div>

<%= link_to "New post", new_post_path %>
