<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "posts/show", "data-turbo-track": "reload" %>
<% end %>

<p style="color: green"><%= notice %></p>

<%= button_to posts_path, form: { role: :presentation }, method: :get do %>
  <svg height="1rem" viewBox="0 0 24 24" width="1rem" xmlns="http://www.w3.org/2000/svg">
    <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
  </svg>
  Back
<% end %>

<div class="posts__show__post">
  <%= render @post %>
</div>

<ol class="posts__show__comments">
  <% @post.comments.each do |comment| %>
    <li aria-label="<%= "Comment #{comment.id}" %>" class="posts__show__comment">
      <%= render comment %>
    </li>
  <% end %>
</ol>

<div class="posts__show__comment_form">
  <%= render "comments/form" %>
</div>
