<p style="color: green"><%= notice %></p>

<%= link_to "Back to posts", posts_path %>

<%= render @post %>

<h2 class="post__post__comments_heading">
  Comments
</h2>
<ol class="post__post__comments">
  <% @post.comments.each do |comment| %>
    <li aria-label="<%= "Comment #{comment.id}" %>">
      <%= render comment %>
    </li>
  <% end %>

</ol>

<h2>Post a Comment</h2>
<%= render "comments/form" %>
