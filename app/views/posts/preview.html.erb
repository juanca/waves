<% content_for :stylesheets do %>
  <%= stylesheet_link_tag "posts/preview", "data-turbo-track": "reload" %>
<% end %>

<p style="color: green"><%= notice %></p>

<%= button_to :back, form: { role: :presentation }, method: :get do %>
  <svg height="1rem" viewBox="0 0 24 24" width="1rem" xmlns="http://www.w3.org/2000/svg">
    <path d="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" />
  </svg>
  Back
<% end %>

<div class="posts__preview__post">
  <%= render @post %>
</div>

<%= form_with(model: @post) do |form| %>
  <%= form.hidden_field :message %>
  <%= form.button do %>
    <svg height="1rem" viewBox="0 0 24 24" width="1rem" xmlns="http://www.w3.org/2000/svg">
      <path d="M4 6.03L11.5 9.25L4 8.25L4 6.03M11.5 14.75L4 17.97V15.75L11.5 14.75M2 3L2 10L17 12L2 14L2 21L23 12L2 3Z" />
    </svg>
    Create
  <% end %>
<% end %>
